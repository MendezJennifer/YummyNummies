@model YummyNummies.Models.Recipe

@{
    ViewData["Title"] = "Recipe Details";
}

<h1>Recipe Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            <strong>@Html.DisplayFor(model => model.Name) </strong>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-10">
            <!--@Html.DisplayFor(model => model.Photo)-->
            <!--Display recipe photo (if any)-->
            @if (Model.Photo != null)
            {
                <img src="~/img/recipes/@Model.Photo" alt="Recipe Photo" class="medPhoto" />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)/5
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CookTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CookTime) mins
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <!--Hide data unles user is logged in-->
        @if (User.Identity.IsAuthenticated)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Steps)
        </dt>
        <dd class="col-sm-10 ">
            @Html.DisplayFor(model => model.Steps)
        </dd>
    </dl>
</div>
<!--Hide data unless user is logged in-->
@if (User.Identity.IsAuthenticated)
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model.RecipeId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
}
