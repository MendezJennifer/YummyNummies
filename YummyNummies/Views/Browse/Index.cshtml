@model IEnumerable<YummyNummies.Models.Category>

@{ ViewData["Title"] = "Browse All Recipes";
}
<h1>Browse All Recipes</h1>
<section class="row card-group">
    @foreach (var c in Model)
    {
        <div class="col-sm-3 col-lg-3 mb-4">
            <div class="card mb-4 text-center h-100">
                <div class="card-body">
                    <a asp-controller="Browse" asp-action="BrowseByCategory" asp-route-id="@c.CategoryId">
                        @c.Name
                    </a>
                </div>
            </div>
        </div>
    }
</section>